<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.kuggleland.kuggle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context="com.kuggleland.kuggle.MainActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/roundrect_background" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@color/blue" >
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativelayout_video"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_margin="15dp"
            >

        </RelativeLayout>

        <Button
            android:id="@+id/button_login_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/relativelayout_video"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/relativelayout_video"
            android:layout_marginBottom="50dp"
            android:background="@drawable/btn_login_phone"
            android:minHeight="45dp"
            android:text="@string/str_login_phone"
            android:textColor="@color/white"
            android:textSize="@dimen/str_button"
            android:textStyle="bold" />

